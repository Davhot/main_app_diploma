%header
  Ошибки
  = @hot_catch_app.name
- if @logs.count == 0
  %p.alert.alert-info Ошибок не найдено.
- else
  - i = 0
  - for log in @logs do
    - i += 1
    .error
      %table{class: "error-first-line", "data-toggle-error": "#er-#{i}"}
        %tr
          %td.n-item-error= i
          %td= log.log_data.split("\n")[0]
          %td
            %span.badge.badge-error= log.count_log

      %div{id: "er-#{i}"}
        %hr
        %p= log.log_data
        %hr
        %p
          %b Статус:
          = log.status
