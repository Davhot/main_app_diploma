.row
  .filter-container
    %header Ошибки
    - i = 0
    - for log in @logs do
      - i += 1
      .error
        %table{class: "error-first-line", "data-toggle-error": "#er-#{i}"}
          %tr
            %td.n-item-error= i
            %td= log.log_data.split("\n")[0]
            %td
              %span.badge.badge-error= log.count_log

        %div{id: "er-#{i}"}
          %hr
          %p= log.log_data
          %hr
          %p
            %b Статус:
            = log.status

  .pagination-block= will_paginate @logs, renderer: BootstrapPagination::Rails

