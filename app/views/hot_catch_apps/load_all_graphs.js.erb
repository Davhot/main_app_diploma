var all_graphs;
<% if @error_date %>
  alert("Неверный формат даты")
<% elsif @links.present? %>
  all_graphs = c3.generate({
    point: {
      r: 5
    },
    bindto: '#all-charts',
    data: {
      xs: {
        <% for x in @links do %>
          <%== "'#{x[0]}':'#{x[1]}'," %>
        <% end %>
      },
      xFormat: '<%== I18n.t("time.formats.c3_date.#{@step}") %>',
      columns: <%== @graph_arrays.inspect %>,
      axes: {
        "процессор": 'y2',
        "используемые дескрипторы": 'y2',
        "Nginx": 'y2',
        "Rails": 'y2'
      }
    },
    tooltip: {
      format: {
        value: function (value, ratio, id) {
          if(["использование памяти", "файл подкачки"].includes(id) ){
            return humanFileSize(value);
          } else if(id == "процессор") {
            return value + '%'
          } else if( !["используемые дескрипторы", "Rails", "Nginx"].includes(id) ){
            return humanFileSize(value);
          } else {
            return value;
          }

        }
      }
    },
    axis: {
      x: {
        type: 'timeseries',
        localtime: true,
        tick: {
          count: 8,
          format: '<%== I18n.t("time.formats.show_date.#{@step}") %>'
        }
      },
      y : {
        tick: {
          format: function (value) { return humanFileSize(value) }
        }
      },
      y2: {
        show: true
      }
    },
    subchart: {
      show: true
    },
    zoom: {
      enabled: true,
      extent: [1, 100]
    },
    size: {
      height: 500
    }
  });

  $(".sidebar-toggle").click(function () {
    resize_all_graphs()
  })

  async function resize_all_graphs() {
    $('#all-charts').css({"opacity": 0})
    await sleep(400);
    all_graphs.resize();
    $('#all-charts').css({"opacity": 1})
  }

<% end %>
